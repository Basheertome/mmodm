extends layout
include mixins

block content
    .grunge
    .grid
    .container
        img.logo(src="images/logo.png", alt="MMODM")
        .menu
            img.save.tooltip.button(src="images/save.png", alt="Save & Share", title="Save & Share")
            .room.tooltip.button.closed(title="Create Room")
                img(src="images/room.png", alt="Create Room")
                form(action="#", id="roomform", class="roomform")
                    p
                        | mmodm.co/
                        span="#"
                    input(type="text", placeholder="ex: #medialab")
                    input(type="submit", value="go")
            .pauseplay.tooltip.button(title="Pause")
                img.play.off(src="images/play.png", alt="Play")
                img.pause(src="images/pause.png", alt="Pause")
            img.stop.tooltip.button(src="images/stop.png", alt="Stop", title="Stop")
            img.restart.tooltip.button(src="images/restart.png", alt="Restart", title="Restart Loop")
            .tempo
                img.larrow.tooltip.button(src="images/larrow.png", alt="<", title="Decrease Tempo")
                .text=120
                img.rarrow.tooltip.button(src="images/rarrow.png", alt=">", title="Increase Tempo")
            .filters.tooltip.button(title="Enable Filter Slider")
                img.lowpass(src="images/filter.png")
                p low / high pass
                .slider
                    span="• • • • • • • • • • "
                    span="| "
                    span="• • • • • • • • • •"
                    .bar
            img.clear.tooltip.button(src="images/clear-menu.png", alt="Clear Sequence", title="Clear Sequence")
        .sequences
            mixin drumLine('a')
            mixin drumLine('b')
            mixin drumLine('c')
            mixin drumLine('d')
            mixin drumLine('e')
            mixin drumLine('f')
            mixin drumLine('g')
            mixin drumLine('h')
            mixin drumLine('i')
            mixin drumLine('j')
            mixin drumLine('k')
            mixin drumLine('l')
            mixin drumLine('m')
            mixin drumLine('n')
            mixin drumLine('o')
            mixin drumLine('p')
            mixin drumLine('q')
            mixin drumLine('r')
            mixin drumLine('s')
            mixin drumLine('t')
            mixin drumLine('u')
            mixin drumLine('v')
            mixin drumLine('w')
            mixin drumLine('x')
            mixin drumLine('y')
            mixin drumLine('z')
        .effects
            img.clear.tooltip.button.on(src="images/clear-effects.png", alt="Clear Effects", title="Clear Effects")
            .stutter
                img.none.tooltip.button.on(src="images/stutter-none.png", alt="No Stutter", title="No Stutter")
                img.full.tooltip.button(src="images/stutter-full.png", alt="1 Stutter", title="1 Stutter")
                img.half.tooltip.button(src="images/stutter-half.png", alt="1/2 Stutter", title="1/2 Stutter")
                img.quarter.tooltip.button(src="images/stutter-quarter.png", alt="1/4 Stutter", title="1/4 Stutter")
                img.eighth.tooltip.button(src="images/stutter-eighth.png", alt="1/8 Stutter", title="1/8 Stutter")
            .gater
                img.none.tooltip.button.on(src="images/gater-none.png", alt="No Gater", title="No Gater")
                img.half.tooltip.button(src="images/gater-half.png", alt="1:1 Gater", title="1:1 Gater")
                img.third.tooltip.button(src="images/gater-third.png", alt="2:1 Gater", title="2:1 Gater")
        mixin tweetForm('images/basheer.jpg','Basheer')
    .help.tooltip(title="Help") ?
    .stream