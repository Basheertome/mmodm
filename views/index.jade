extends layout
include mixins

block content
    .grunge
    .grid
    .container
        img.logo(src="images/logo.png", alt="MMODM")
        .menu
            .save.tooltip.button(title="Save & Share", data-helper="Save & Share")
                img(src="images/save.png", alt="Save & Share")
            .room.tooltip.button.closed(title="Create Room", data-helper="Create Room")
                img(src="images/room.png", alt="Create Room")
                form(action="#", id="roomform", class="roomform")
                    p
                        | mmodm.co/
                        span="#"
                    input(type="text", placeholder="ex: #medialab")
                    input(type="submit", value="go")
            .pauseplay.tooltip.button(title="Pause", data-helper="Pause / Play")
                img.play.off(src="images/play.png", alt="Play")
                img.pause(src="images/pause.png", alt="Pause")
            .stop.tooltip.button(title="Stop", data-helper="Stop")
                img(src="images/stop.png", alt="Stop")
            .restart.tooltip.button(title="Restart Loop", data-helper="Restart Loop")
                img(src="images/restart.png", alt="Restart")
            .tempo(data-helper="Change Tempo")
                img.larrow.tooltip.button(src="images/larrow.png", alt="<", title="Decrease Tempo")
                .text=120
                img.rarrow.tooltip.button(src="images/rarrow.png", alt=">", title="Increase Tempo")
            .filters.tooltip.button(title="Enable Filter Slider", data-helper="Low & High Pass Filters")
                img.lowpass(src="images/filter.png")
                p low / high pass
                .slider
                    span="• • • • • • • • • • "
                    span="| "
                    span="• • • • • • • • • •"
                    .bar
            .clear.tooltip.button(title="Clear Sequence", data-helper="Clear Sequence")
                img(src="images/clear-menu.png", alt="Clear Sequence")
        .sequences
            mixin drumLine('a')
            mixin drumLine('b')
            mixin drumLine('c')
            mixin drumLine('d')
            mixin drumLine('e')
            mixin drumLine('f')
            mixin drumLine('g')
            mixin drumLine('h')
            mixin drumLine('i')
            mixin drumLine('j')
            mixin drumLine('k')
            mixin drumLine('l')
            mixin drumLine('m')
            mixin drumLine('n')
            mixin drumLine('o')
            mixin drumLine('p')
            mixin drumLine('q')
            mixin drumLine('r')
            mixin drumLine('s')
            mixin drumLine('t')
            mixin drumLine('u')
            mixin drumLine('v')
            mixin drumLine('w')
            mixin drumLine('x')
            mixin drumLine('y')
            mixin drumLine('z')
        .effects
            .clear.tooltip.button.on(title="Clear Effects", data-helper="Clear Effects")
                img(src="images/clear-effects.png", alt="Clear Effects")
            .stutter
                .none.tooltip.button.on(title="No Stutter", data-helper="No Stutter")
                    img(src="images/stutter-none.png", alt="No Stutter")
                .full.tooltip.button(title="1 Stutter", data-helper="1 Stutter")
                    img(src="images/stutter-full.png", alt="1 Stutter")
                .half.tooltip.button(title="1/2 Stutter", data-helper="1/2 Stutter")
                    img(src="images/stutter-half.png", alt="1/2 Stutter")
                .quarter.tooltip.button(title="1/4 Stutter", data-helper="1/4 Stutter")
                    img(src="images/stutter-quarter.png", alt="1/4 Stutter")
                .eighth.tooltip.button(title="1/8 Stutter", data-helper="1/8 Stutter")
                    img(src="images/stutter-eighth.png", alt="1/8 Stutter")
            .gater
                .none.tooltip.button.on(title="No Gater", data-helper="No Gater")
                    img(src="images/gater-none.png", alt="No Gater")
                .half.tooltip.button(title="1:1 Gater", data-helper="1:1 Gater")
                    img(src="images/gater-half.png", alt="1:1 Gater")
                .third.tooltip.button(title="2:1 Gater", data-helper="2:1 Gater")
                    img(src="images/gater-third.png", alt="2:1 Gater")
        mixin tweetForm('images/basheer.jpg','Basheer')
    .help.tooltip(title="Help") ?
    a.github.tooltip(href="https://github.com/MMODM/mmodm/", target="_blank", title="Our Github")
        img(src="images/github.png")
    a.twitterlink.tooltip(href="https://twitter.com/playmmodm", target="_blank", title="Our Twitter")
        img(src="images/twitter_logo.png")
    .stream
    .shade
        p= "MMODM is a Massive Multiplayer Online Drum Machine powered by the Twitter streaming API! Use the buttons above to modify and adjust the sequence. The buttons below modify the effects. You can also create your own room with a second hashtag to jam with just your friends."