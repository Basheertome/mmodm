mixin tweetForm(imgSource, imgAlt)
    form.twitter(action="#", id='simForm')
        if(!user)
            a.introtip.login.button(href='/auth/twitter', title="To add your own notes, sign in with Twitter.")
                img(src="images/twitter_logo.png")
                p Login with Twitter

        else
            img.avatar(src=user.image, alt=user.name)
            input.introtip.tweet(type="text", placeholder="ex: riff on this [a--a--a--abc--cc] with me on #mmodm", autocomplete="off", title="Tweet a 16 character sequence of letters and spaces.")
            input.post(type="submit", value="Tweet")

