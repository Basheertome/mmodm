            else
                img.avatar(src=user.image, alt=user.name)
                input.introtip.tweet(type="text", placeholder="ex: riff on this [o---o---o---oz--z-zzz-zz] with me on #mmodm", autocomplete="off", title="Tweet a sequence of letters and dashes.")
